<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgblue"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="12dp"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please input the watt of each lamp:  "/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"/>
        <LinearLayout
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lamp 1 (on Terrace): "/>
            <EditText
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:id="@+id/et_watt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="watt"/>
            <TextView
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lamp 2 (on Bedroom): "/>
            <EditText
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:id="@+id/et_watt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="watt"/>
            <TextView
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lamp 3 (on Living Room): "/>
            <EditText
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:id="@+id/et_watt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="watt"/>
            <TextView
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lamp 4 (on Closet Room): "/>
            <EditText
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:id="@+id/et_watt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="watt"/>
            <Button
                android:layout_margin="5dp"
                android:id="@+id/btn_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SET"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear all data in database"/>
        <Button
            android:layout_margin="8dp"
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Data"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"/>
    </LinearLayout>
</LinearLayout>